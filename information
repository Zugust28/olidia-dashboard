                comparisonData.features.forEach(feature => {
                    const row = document.createElement('tr');
                    row.className = 'border-b border-gray-200';
                    let cells = `<td class="p-4 font-medium text-gray-800">${feature}</td>`;
                    Object.keys(comparisonData.products).forEach(productName => {
                         const isSelected = selectedProducts.includes(productName);
                         cells += `<td data-product="${productName}" class="p-4 text-center text-gray-600 ${isSelected ? '' : 'hidden'}">${comparisonData.products[productName][feature]}</td>`;
                    });
                    row.innerHTML = cells;
                    tableBody.appendChild(row);
                });

                tableHeaders.forEach(th => {
                    if (selectedProducts.includes(th.dataset.product)) {
                        th.classList.remove('hidden');
                    } else {
                        th.classList.add('hidden');
                    }
                });

                 Array.from(tableBody.querySelectorAll('td[data-product]')).forEach(td => {
                    if (selectedProducts.includes(td.dataset.product)) {
                        td.classList.remove('hidden');
                    } else {
                        td.classList.add('hidden');
                    }
                });
            }

            function updateChart() {
                const selectedProducts = Array.from(checkboxes)
                    .filter(cb => cb.checked)
                    .map(cb => cb.value);

                const labels = selectedProducts;
                const onsetData = selectedProducts.map(p => chartData[p].onset);
                const durationData = selectedProducts.map(p => chartData[p].duration);
                
                if (comparisonChart) {
                    comparisonChart.destroy();
                }

                comparisonChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: '‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏´‡πá‡∏ô‡∏ú‡∏• (‡πÄ‡∏î‡∏∑‡∏≠‡∏ô)',
                                data: onsetData,
                                backgroundColor: 'rgba(191, 146, 112, 0.6)',
                                borderColor: 'rgba(191, 146, 112, 1)',
                                borderWidth: 1,
                                yAxisID: 'y'
                            },
                            {
                                label: '‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡∏ô‡∏≤‡∏ô (‡πÄ‡∏î‡∏∑‡∏≠‡∏ô)',
                                data: durationData,
                                backgroundColor: 'rgba(126, 132, 118, 0.6)',
                                borderColor: 'rgba(126, 132, 118, 1)',
                                borderWidth: 1,
                                yAxisID: 'y'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            title: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed.y !== null) {
                                            label += context.parsed.y + ' ‡πÄ‡∏î‡∏∑‡∏≠‡∏ô';
                                        }
                                        return label;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: '‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏î‡∏∑‡∏≠‡∏ô'
                                }
                            }
                        }
                    }
                });
            }


            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => {
                    updateTable();
                    updateChart();
                });
            });

            // Strategy Tabs
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');
            const strategyContent = document.getElementById('strategy-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');

                    const targetId = button.dataset.target;
                    
                    strategyContent.classList.remove('fade-in');
                    void strategyContent.offsetWidth; 
                    strategyContent.classList.add('fade-in');


                    tabContents.forEach(content => {
                        if (content.id === targetId) {
                            content.classList.remove('hidden');
                        } else {
                            content.classList.add('hidden');
                        }
                    });
                });
            });
            
            // Navigation scroll
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

             // Mobile navigation
            const mobileNav = document.getElementById('mobile-nav');
            mobileNav.addEventListener('change', function(e) {
                const targetId = e.target.value;
                 document.querySelector(targetId).scrollIntoView({
                        behavior: 'smooth'
                    });
            });


            // Initial load
            updateTable();
            updateChart();
        });
    </script>

</body>
</html>
